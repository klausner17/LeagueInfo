<UserControl x:Class="LeagueInfo.ItemSelect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignWidth="480" Height="100">
    
    <Grid x:Name="LayoutRoot">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="*"/>
    		<RowDefinition Height="*"/>
    	</Grid.RowDefinitions>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="100"/>
    		<ColumnDefinition Width="*"/>
    	</Grid.ColumnDefinitions>
		<Canvas Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="#FF5FFF58" Margin="5">
			<Image x:Name="icon" />
		</Canvas>
		<TextBlock x:Name="title" Grid.Row="0" Grid.Column="1" FontSize="34.667" Text="Title" Margin="8,0,0,0" Foreground="Black"/>
		<TextBlock x:Name="description" Grid.Row="1" Grid.Column="1" FontSize="26.667" Text="Description" Margin="8,0,0,0" Foreground="{StaticResource PhoneAccentBrush}" />
	</Grid>
</UserControl>