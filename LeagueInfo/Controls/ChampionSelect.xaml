<UserControl x:Name="userControl" x:Class="LeagueInfo.ChampionSelected"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignWidth="480" Height="100" RenderTransformOrigin="0.5,0.5" 
    MouseLeftButtonDown="userControl_MouseLeftButtonDown" MouseLeftButtonUp="userControl_MouseLeftButtonUp">
	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
        <Canvas Height="90" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Margin="5" Background="Cyan" />
        <Image x:Name="icon"   Height="90" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Margin="5" />
        <TextBlock x:Name="title" Grid.Row="0" Grid.Column="1" FontSize="26.667" Text="Title" Margin="8,0,0,0" Foreground="White" />
		<TextBlock x:Name="description" Grid.Row="1" Grid.Column="1" FontSize="26.667" Text="Description" Margin="8,0,0,0" Foreground="{StaticResource PhoneSubtleBrush}" />
	</Grid>
    
</UserControl>