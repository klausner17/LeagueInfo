<UserControl x:Name="userControl" x:Class="LeagueInfo.ChampionSelected"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignWidth="150" Height="150" RenderTransformOrigin="0.5,0.5" 
    MouseLeftButtonDown="userControl_MouseLeftButtonDown" MouseLeftButtonUp="userControl_MouseLeftButtonUp">
    <Grid x:Name="LayoutRoot">
        <Image x:Name="icon" Grid.RowSpan="3" Grid.Row="0" Width="150" Height="150" Source="/Assets/champions/Aatrox_Square_0.png" />
        <Grid Width="Auto" VerticalAlignment="Bottom">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.75"/>
            </Grid.Background>
            <TextBlock  x:Name="title"  FontSize="24" Text="Title"  TextAlignment="Center" VerticalAlignment="Bottom" Foreground="White" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" />
        </Grid>
    </Grid>

</UserControl>