<UserControl x:Class="LeagueInfo.Controls.ChampionComment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="200" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <SolidColorBrush Color="DarkGoldenrod" Opacity="0.4" />
            </Grid.Background>
            <TextBlock Name="textBlockComment" Grid.Row="0" HorizontalAlignment="Stretch"
                       FontSize="30" TextWrapping="Wrap"  />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.Background>
                <SolidColorBrush Color="Blue" Opacity="0.4" />
            </Grid.Background>
            <TextBlock Name="textBlockUser" Grid.Row="1" FontSize="26" 
                       HorizontalAlignment="Stretch"  TextAlignment="Right" />
        </Grid>
    </Grid>
</UserControl>